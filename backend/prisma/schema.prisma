// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ========================
//  TENANT
// ========================
model Tenant {
  id          String     @id @default(cuid())
  name        String
  email       String     @unique
  password    String
  role        Role      @default(ADMIN)

  domain      String?    @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  employees   Employee[]
  departments Department[]
  projects    Project[]
  leaves      Leave[]
  tasks       Task[]
}


// ========================
//  EMPLOYEE (also USER)
// ========================
model Employee {
  id                String   @id @default(cuid())

  // LOGIN
  email             String   @unique
  password          String?
  role              Role     @default(EMPLOYEE)

  // Profile Info
  firstName         String
  lastName          String?
  phone             String?
  dateOfBirth       DateTime?
  gender            Gender? @default(OTHER)
  position          String?

  // Initial Password Setup
  setupToken        String?
  setupTokenExpiry  DateTime?

  // Employment
  salary            Float?
  dateOfJoining     DateTime?
  employmentType    EmploymentType   @default(FULL_TIME)
  status            EmploymentStatus @default(ACTIVE)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  departmentId      String?
  projectId         String?
  tenantId          String

  tenant            Tenant     @relation(fields: [tenantId], references: [id])
  department        Department? @relation(fields: [departmentId], references: [id])
  project           Project?    @relation(fields: [projectId], references: [id])  


  // Leaves
  leaves            Leave[]

  // Tasks
  tasksAssigned     Task[] @relation("TaskAssignee")
  tasksCreated      Task[] @relation("TaskCreator")

  // Manager can handle one project only
  projectManaged    Project?   @relation("ProjectManagerEmployee")

  leavesManaged     Leave[]    @relation("LeaveManager")
  leavesApproved    Leave[]    @relation("LeaveHR")
}


// ========================
//  PROJECT
// ========================
model Project {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  client      String
  description String?
  status      Status @default(ONGOING)
  deadline    DateTime?
  managerId   String @unique    // ✅ Manager → only one project
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant      Tenant  @relation(fields: [tenantId], references: [id])

  members     Employee[]

  // Manager (only one project allowed)
  manager     Employee @relation("ProjectManagerEmployee", fields: [managerId], references: [id])
}


// ========================
//  DEPARTMENT
// ========================
model Department {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  employees Employee[]
}



// ========================
//  LEAVE
// ========================
model Leave {
  id            String       @id @default(cuid())
  tenantId      String
  employeeId    String

  managerId     String?   // first approver
  hrId          String?   // final approver

  type          LeaveType
  reason        String?

  startDate     DateTime
  endDate       DateTime

  appliedAt     DateTime  @default(now())
  decisionAt    DateTime?

  managerStatus LeaveStatus  @default(PENDING)
  hrStatus      LeaveStatus  @default(PENDING)

  status        LeaveStatus  @default(PENDING)  // final
  attachment    String?

  tenant     Tenant    @relation(fields: [tenantId], references: [id])
  employee   Employee  @relation(fields: [employeeId], references: [id])

  manager    Employee?   @relation("LeaveManager", fields: [managerId], references: [id])
  hr         Employee?   @relation("LeaveHR", fields: [hrId], references: [id])
}



// ========================
//  TASK
// ========================
model Task {
  id            String     @id @default(cuid())
  tenantId      String
  title         String
  description   String?
  priority      TaskPriority @default(MEDIUM)
  status        TaskStatus   @default(TODO)

  assigneeId    String
  creatorId     String

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tenant     Tenant    @relation(fields: [tenantId], references: [id])
  assignee   Employee  @relation("TaskAssignee", fields: [assigneeId], references: [id])
  creator    Employee  @relation("TaskCreator", fields: [creatorId], references: [id])
}



// ========================
//  ENUMS
// ========================
enum Role {
  ADMIN
  HR
  MANAGER
  EMPLOYEE
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  INTERN
  CONTRACT
}

enum EmploymentStatus {
  ACTIVE
  INACTIVE
  ON_LEAVE
  TERMINATED
}

enum Status {
  ONGOING
  PENDING
  CANCELLED
  COMPLETED
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveType {
  SICK
  VACATION
  CASUAL
  UNPAID
  MATERNITY
  PATERNITY
  OTHER
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
}
